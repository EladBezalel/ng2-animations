{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": false,
    "sourceMap": false,
    "paths": {
      "@angular/*": [
        "./lib/@angular/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
